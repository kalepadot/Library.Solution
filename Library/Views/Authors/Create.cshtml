@{
  Layout = "_Layout";
}

@model Library.Models.Author

<br>
<br>
<h4>Add a new author</h4>

@using (Html.BeginForm())
{
  <div class="mdl-textfield mdl-js-textfield">
    @Html.LabelFor(model => model.Name, new { @class="mdl-textfield__label" })
    @Html.TextBoxFor(model => model.Name, new { @class="mdl-textfield__input" })
  </div>

  @Html.Label("Select name")
  @Html.DropDownList("BookId")

    <input type="submit" value="Add new author" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all authors", "Index")</p>