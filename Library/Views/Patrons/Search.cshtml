 @{
  Layout = "_Layout";
}
@using Library.Models;
@using System.Collections.Generic;
@model List<Library.Models.Author>;

<h2>Search Results: <h2>

@if (@Model.Count == 0)
{
  <p>There are no authors with that name</p>
}

else
{
  @foreach (Author author in Model)
  {
  <li>@Html.ActionLink($"{author.Name}", "Details", new { id = author.AuthorId })</li>
  }
}

<p>@Html.ActionLink("Back to authors", "Index")</p>